<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>EmpoWer - Login</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <%- include("partials/simpleNavbar.ejs") %>

    <h1>Login</h1>

    <form action="/login" method="post">
      
        <div class="container">
          <label><b>Email address</b>
          <input type="text" placeholder="Enter Wellesley Email" name="uname" required></label>
        </div>

        <div class="container">
          <label><b>Password</b>
          <input type="password" placeholder="Enter Password" name="psw" required></label>
        </div>

        <div class="container">
            <button type="submit">Login</button>
        </div>

    </form>


    <%- include("partials/flashes.ejs") %>


    <div>
        <span class="signUp">Don't have an account yet? <a href="/signUp/" class="button">Sign-up!</a></span>
    </div>


    <!-- load local js -->
    <script src="/main.js"></script>
</body>
</html>
